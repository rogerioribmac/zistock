<core:FragmentDefinition
        xmlns:core="sap.ui.core"
        xmlns="sap.m"
        xmlns:viz="sap.viz.ui5.controls"
        xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
        xmlns:viz.data="sap.viz.ui5.data"
        xmlns:microchart="sap.suite.ui.microchart"
        xmlns:macros="sap.fe.macros">
    <FlexBox width="100%" height="100%" direction="Column" alignItems="Start" id="idDonutFlexBox">
        <items>
            <microchart:InteractiveDonutChart
                id="idDonutChart"
                selectionChanged="handler.onSelectionChanged"
                core:require="{handler: 'com/ep/zistocks/ext/fragment/DonutChart'}"
                selectionEnabled="true"
                displayedSegments="30"
                segments="{ path: '_stor_loc', sorter: [{path: 'Quantity' , descending: true }] }" >
                <microchart:segments>
                    <microchart:InteractiveDonutChartSegment
                        value="{Quantity}"
                        label="{= ${StorageLocation} + ' - ' + ${StorageLocationTxt} }"
                        displayedValue="{Quantity}" />
                </microchart:segments>
            </microchart:InteractiveDonutChart>
        </items>
    </FlexBox>
</core:FragmentDefinition>